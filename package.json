{
  "name": "webpack-babel-base",
  "version": "1.0.0",
  "description": "Base repo for JS build with webpack and babel",
  "main": "src/js/index.js",
  "scripts": {
    "start": "node -r babel-register node_modules/.bin/webpack-dev-server --open --config=webpack/development.js",
    "test": "npm run test:lint",
    "test:lint": "eslint src webpack bin",
    "build": "npm run -s build:clean && npm run -s build:webpack && npm run -s build:assets",
    "build:clean": "rm -fr ./build",
    "build:webpack": "node -r babel-register node_modules/.bin/webpack --config=webpack/production.js",
    "build:assets": "mkdir -p build/assets && rsync -rtvqL src/assets/ build/assets"
  },
  "repository": {
    "type": "git",
    "url": "git+https://webholics@github.com/webholics/webpack-babel-base.git"
  },
  "keywords": [
    "js",
    "es6",
    "babel",
    "webpack"
  ],
  "author": "Mario Volke <mv@codastic.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/webholics/webpack-babel-base/issues"
  },
  "homepage": "https://github.com/webholics/webpack-babel-base#readme",
  "devDependencies": {
    "autoprefixer": "^6.7.4",
    "babel-cli": "^6.23.0",
    "babel-core": "^6.23.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.3.2",
    "babel-preset-es2015": "^6.22.0",
    "babel-register": "^6.23.0",
    "css-loader": "^0.26.1",
    "eslint": "^3.16.0",
    "eslint-config-airbnb-base": "^11.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "extract-text-webpack-plugin": "^2.0.0-rc.3",
    "file-loader": "^0.10.0",
    "html-webpack-plugin": "^2.28.0",
    "import-glob-loader": "^1.1.0",
    "node-sass": "^4.5.0",
    "postcss-loader": "^1.3.1",
    "sass-loader": "^6.0.1",
    "style-loader": "^0.13.1",
    "svg-sprite-loader": "^0.3.0",
    "svgo": "^0.7.2",
    "svgo-loader": "^1.1.2",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.1"
  },
  "dependencies": {
    "lodash": "^4.17.4"
  }
}
